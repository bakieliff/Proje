@model CourierWebApp.Models.Delivery

@{
    ViewData["Title"] = "Detaylar";
}

<h1>Detaylar</h1>

<div>
    <h4>Teslimat</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2 fw-bold">Müşteri</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Customer.CustomerEmail)</dd>

        <dt class="col-sm-2 fw-bold">Kargo Kalemi</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Item.Name)</dd>

        <dt class="col-sm-2 fw-bold">Açıklama</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Item.Description)</dd>

        <dt class="col-sm-2 fw-bold">Birim</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Unit.Unit)</dd>

        <dt class="col-sm-2 fw-bold">Miktar</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Quantity)</dd>

        <dt class="col-sm-2 fw-bold">Fiyat</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Price)</dd>

        <dt class="col-sm-2 fw-bold">Tarih</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Date)</dd>
    </dl>
</div>

<div class="mt-4 d-flex gap-2 flex-wrap">
    <a asp-action="Edit" asp-route-id="@Model.Id"
       class="btn text-white d-flex align-items-center"
       style="background-color: #f4b8da; padding: 0.5rem 1rem;">
        <i class="bi bi-pencil me-2"></i> Düzenle
    </a>
    <a asp-action="Index"
       class="btn text-white d-flex align-items-center"
       style="background-color: #eea1cd; padding: 0.5rem 1rem;">
        <i class="bi bi-arrow-left me-2"></i> Listeye Dön
    </a>
</div>