@model CourierWebApp.Models.Customer

@{
    ViewData["Title"] = "Müşteri Oluştur";
}

<div class="form-page">

    <h1 class="page-title">Müşteri Oluştur</h1>
    <p class="page-sub">Yeni bir müşteri bilgisi girin.</p>

    <div class="form-surface">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="CustomerName" class="form-label">Müşteri Adı</label>
                <input asp-for="CustomerName" class="form-control" placeholder="Ahmet Yılmaz" />
                <span asp-validation-for="CustomerName" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="CustomerEmail" class="form-label">E-posta</label>
                <input asp-for="CustomerEmail" class="form-control" placeholder="ahmet@mail.com" />
                <span asp-validation-for="CustomerEmail" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="action-btn primary">
                    <i class="bi bi-person-plus"></i>
                    <span>Oluştur</span>
                </button>

                <a asp-action="Index" class="action-btn secondary">
                    <i class="bi bi-arrow-left"></i>
                    <span>Listeye Dön</span>
                </a>
            </div>
        </form>
    </div>
</div>

<style>
    .form-page {
        max-width: 520px;
    }

    .page-title {
        font-weight: 700;
        background: linear-gradient(90deg,#e68bbe,#eea1cd);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .page-sub {
        color: #777;
        margin-bottom: 1.5rem;
    }

    .form-surface {
        background: rgba(255,255,255,0.9);
        border-radius: 1.2rem;
        padding: 1.5rem;
        border: 1px solid rgba(230,139,190,0.25);
        box-shadow: 0 16px 30px rgba(0,0,0,.08);
    }

    .action-btn {
        display: inline-flex;
        align-items: center;
        gap: .5rem;
        padding: .55rem 1.1rem;
        border-radius: .9rem;
        text-decoration: none;
        color: #fff;
        font-weight: 500;
    }

    .primary {
        background: #e68bbe;
    }

    .secondary {
        background: #f4b8da;
    }
</style>
