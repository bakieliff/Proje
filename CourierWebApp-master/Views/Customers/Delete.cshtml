@model CourierWebApp.Models.Customer

@{
    ViewData["Title"] = "Müşteri Sil";
}

<div class="details-page">

    <h1 class="page-title">Müşteri Sil</h1>
    <p class="page-sub text-danger">Bu işlem geri alınamaz.</p>

    <div class="details-surface">
        <p><strong>Müşteri:</strong> @Model.CustomerName</p>
        <p><strong>E-posta:</strong> @Model.CustomerEmail</p>
    </div>

    <form asp-action="Delete" class="mt-3 d-flex gap-2">
        <input type="hidden" asp-for="CustomerId" />

        <button type="submit" class="action-btn danger">
            <i class="bi bi-trash"></i>
            <span>Sil</span>
        </button>

        <a asp-action="Index" class="action-btn secondary">
            <i class="bi bi-arrow-left"></i>
            <span>İptal</span>
        </a>
    </form>
</div>

<style>
    .details-page {
        max-width: 520px;
    }

    .page-title {
        font-weight: 700;
        background: linear-gradient(90deg,#e68bbe,#eea1cd);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .page-sub {
        color: #c44;
    }

    .details-surface {
        background: rgba(255,255,255,.9);
        border-radius: 1.2rem;
        padding: 1.4rem;
        border: 1px solid rgba(230,139,190,.25);
        box-shadow: 0 16px 30px rgba(0,0,0,.08);
    }

    .action-btn {
        display: inline-flex;
        align-items: center;
        gap: .5rem;
        padding: .55rem 1.1rem;
        border-radius: .9rem;
        color: #fff;
        text-decoration: none;
    }

    .secondary {
        background: #f4b8da;
    }

    .danger {
        background: #e68bbe;
    }
</style>
