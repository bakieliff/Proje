@model CourierWebApp.Models.Customer

@{
    ViewData["Title"] = "Sil";
}

<h1>Sil</h1>

<h3>Bunu silmek istediğinizden emin misiniz?</h3>

<div>
    <h4>Müşteri</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2 fw-bold">Müşteri Adı</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.CustomerName)</dd>

        <dt class="col-sm-2 fw-bold">E-posta</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.CustomerEmail)</dd>
    </dl>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger d-flex align-items-center" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            @TempData["ErrorMessage"]
        </div>
    }

    <form asp-action="Delete" class="mt-4 d-flex gap-2 flex-wrap">
        <input type="hidden" asp-for="CustomerId" />

        <button type="submit"
                class="btn text-white d-flex align-items-center"
                style="background-color: #e68bbe; padding: 0.5rem 1rem;">
            <i class="bi bi-trash me-2"></i> Sil
        </button>

        <a asp-action="Index"
           class="btn text-white d-flex align-items-center"
           style="background-color: #f4b8da; padding: 0.5rem 1rem;">
            <i class="bi bi-arrow-left me-2"></i> Listeye Dön
        </a>
    </form>
</div>