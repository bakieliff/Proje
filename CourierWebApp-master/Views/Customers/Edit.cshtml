@model CourierWebApp.Models.Customer

@{
    ViewData["Title"] = "Müşteri Düzenle";
}

<div class="form-page">

    <h1 class="page-title">Müşteri Düzenle</h1>

    <div class="form-surface">
        <form asp-action="Edit">
            <input type="hidden" asp-for="CustomerId" />

            <div class="mb-3">
                <label asp-for="CustomerName" class="form-label">Müşteri Adı</label>
                <input asp-for="CustomerName" class="form-control" />
            </div>

            <div class="mb-4">
                <label asp-for="CustomerEmail" class="form-label">E-posta</label>
                <input asp-for="CustomerEmail" class="form-control" />
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="action-btn primary">
                    <i class="bi bi-save"></i>
                    <span>Kaydet</span>
                </button>

                <a asp-action="Index" class="action-btn secondary">
                    <i class="bi bi-arrow-left"></i>
                    <span>Listeye Dön</span>
                </a>
            </div>
        </form>
    </div>
</div>

<style>
    .form-page {
        max-width: 520px;
    }

    .page-title {
        font-weight: 700;
        background: linear-gradient(90deg,#e68bbe,#eea1cd);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .form-surface {
        background: rgba(255,255,255,.9);
        border-radius: 1.2rem;
        padding: 1.5rem;
        border: 1px solid rgba(230,139,190,.25);
        box-shadow: 0 16px 30px rgba(0,0,0,.08);
    }

    .action-btn {
        display: inline-flex;
        align-items: center;
        gap: .5rem;
        padding: .55rem 1.1rem;
        border-radius: .9rem;
        color: #fff;
        text-decoration: none;
    }

    .primary {
        background: #e68bbe;
    }

    .secondary {
        background: #f4b8da;
    }
</style>
